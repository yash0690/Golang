/*Above the fold design*/
html, body, #atf, #btf, #gallery{
    padding: 0;
    margin: 0;
    border:0;
    height: 100%;
    box-sizing: border-box;
}

h1, h2, h3, p {
    font-family: Avenir, Pier Regular, sans-serif;
}

h1 {
    font-size: 48px;
    color: white;
    text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
}

.trans{
    width:100%;
    height: 50px;
}

#atf {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    background-color: #81F7F3;
}

#gallery {
    display: flex;
    flex-direction: column;
    flex-wrap:nowrap;
    justify-content: center;
    align-items: center;
    background-color: #7cff6e;
}

#gallery ul{
	width:100%;
	display:flex;
	flex-direction:row;
	list-style-type: none;
}

@keyframes slideanim{
    0% {left 0%;}
    20% {left: 0%;}
    25% {left: -100%;}
    45% {left: -100%;}
    50% {left: -200%;}
    70% {left: -200%;}
    75% {left: -300%;}
    95% {left: -300%;}
    100% {left: -400%;}
}

div #slideshow{
    overflow: hidden
}

div #slideshow figure img {
    width: 10%;
    height: 50%;
    float: left;
}

div #slideshow figure{
    position: relative;
    width: 500%;
    margin: 0;
    left: 0;
    animation: 30s slideanim infinite;
}

/*Navigation*/
#nav{
    background-color: #FFFFFF;
    position: fixed;
    top: 0;
    width: 100%;
    height: 50px;
    border-bottom: 1px solid black;
    font-family: Avenir, Pier Regular, sans-serif;
    font-size: 24px;
    display:flex;
    align-items:center;
}

#nav ul{
    list-style: none;
    padding:0;
    margin:0;
    display: flex;
    flex-direction:row;
    justify-content:flex-end;
    width:100%;
}

#nav ul li{
    margin-right: 10px;
    display: block;
    text-align:right;
}

#nav a{
    color: black;
    text-decoration:none;
}

#nav a:visited{
    color:black;
    text-decoration:none;
}

#btf {
    height: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items:center;
}

#btf p{
    width:200px;
    text-align:center;
}

#contacts{
    margin: 0px;
    padding: 0px;
    border: 0;
    background-color:#ffa14d;
    overflow:hidden;
}

.column {
    margin: auto;
    display: inline-block;
    width: 25%;
    float: left;
}

.column h3, p{
    text-align:center;
}


/*-------------------------------------RESPONSIVE TO RESIZING SECTION---------------------*/
/*
It uses the @media rule to include a block of CSS properties only if a certain condition is true,
In this case we are checking screen widths and heights to determine which instrunction to carry out.

If screen width is <= 790, then do following:
   column- change column width from 25% to 100%
         - text center and font change
   below the fold- text center and change font*/
@media screen and (max-width: 790px){

    .column {
        width: 100%;
    }

    .column p{
        text-align: center;
        font-family: "Comic Sans MS" ;

    }

    #btf p{
        text-align: center;
        font-family: "Comic Sans MS" ;
        height: auto;
    }

}

/*If height of screen is <=535px
   above the fold- do not display image
                -change h1 to be 100%
   below the fold- dont display image*/
@media screen and ( max-height: 535px ){

    #atf img{
        display:none;
    }

    #atf h1{
        width:100%
    }

    #btf img{
        display:none;

    }
}

/*If width of screen is <=540px
change width and height of slide show from 10 to 20 and 50 to 40
-also change height of navigation bar from 50 to 35*/
@media screen and (max-width:540px){
    div #slideshow figure img {
        width: 20%;
        height: 40%;
    }

    #nav{
        height: 35px;
    }
}

/*If screen height and width is <= 200px
    change font size and color of above the fold <h1>
    dont not display below the fold(mission)
    and change contacts font color */
@media screen and ( max-height: 200px) ,and, (max-width: 200){
    #atf h1{
        font-size:35px;
        color: #F2B50F;
    }
    #btf{
        display: none;
    }
    #contacts h3, p, h2{
        color:darkslateblue ;
    }
}
/*If screen height <= 120px and width is <=200, then
do not display the navigation bar*/
@media screen and ( max-height: 120px) ,and, (max-width: 200) {
    #nav{
        display: none;
    }
}
